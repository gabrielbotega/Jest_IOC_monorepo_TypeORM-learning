{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": false,
    "preserveSymlinks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitReturns": false
  },
  "compileOnSave": false,
  "exclude": ["node_modules"]
}
